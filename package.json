{
    "name": "monkey-c",
    "displayName": "Connect IQ",
    "description": "Garmin Connect IQ Monkey C language support for VS Code",
    "icon": "images/icon.png",
    "galleryBanner": {
        "color": "#424242",
        "theme": "dark"
    },
    "version": "0.4.1",
    "publisher": "ghisguth",
    "maintainers": [
        "ghisguth",
        "adamcrossland",
        "hobbe"
    ],
    "engines": {
        "vscode": "^1.42.0"
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "tslint -p ./",
        "pretest": "npm run compile && npm run lint",
        "test": "node ./out/test/runTest.js",
        "watch": "tsc -watch -p ./",
        "extension:package": "./node_modules/.bin/vsce package",
        "extension:install": "code --install-extension %npm_package_name%-%npm_package_version%.vsix",
        "extension:deploy": "npm run extension:package && npm run extension:install"
    },
    "license": "SEE LICENSE IN LICENSE",
    "bugs": {
        "url": "https://github.com/ghisguth/vscode-monkey-c/issues",
        "email": "alexander.fedora@gmail.com"
    },
    "homepage": "https://github.com/ghisguth/vscode-monkey-c/blob/master/README.md",
    "repository": {
        "type": "git",
        "url": "https://github.com/ghisguth/vscode-monkey-c.git"
    },
    "categories": [
        "Programming Languages",
        "Snippets"
    ],
    "activationEvents": [
        "onCommand:extension.newiqproject",
        "onLanguage:monkeyc"
    ],
    "main": "./out/src/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "monkeyc",
                "aliases": [
                    "Monkey C",
                    "monkeyc",
                    "Garmin",
                    "Connect IQ",
                    "connectiq"
                ],
                "extensions": [
                    ".mc"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "configuration": {
            "title": "Connect IQ",
            "properties": {
                "connectiq.sdkPath": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "default": null,
                    "markdownDescription": "Path to the [Connect IQ SDK](https://developer.garmin.com/connect-iq/sdk/)",
                    "scope": "machine-overridable"
                },
                "connectiq.javaPath": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "default": null,
                    "description": "Path to a Java Runtime Environment (version <= 1.8). The Connect IQ SDK makes use of a Java VM",
                    "scope": "machine-overridable"
                },
                "connectiq.developerKey": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "default": null,
                    "markdownDescription": "Path to Garmin developer certificate (*.der). The Connect IQ compiler requires a developer key to sign apps when they are compiled and packaged. See [Generating a Developer Key](https://developer.garmin.com/connect-iq/programmers-guide/getting-started/#generatingadeveloperkeyconnectiq1.3)",
                    "scope": "window"
                }
            }
        },
        "grammars": [
            {
                "language": "monkeyc",
                "scopeName": "source.mc",
                "path": "./syntaxes/monkeyc.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "monkeyc",
                "path": "./snippets/monkeyc.json"
            }
        ],
        "commands": [
            {
                "command": "extension.newiqproject",
                "title": "New Connect IQ Project"
            }
        ]
    },
    "dependencies": {
        "clang-format": "^1.5.0",
        "uuid": "^8.3.2"
    },
    "devDependencies": {
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.2.2",
        "@types/node": "^14.14.37",
        "@types/vscode": "^1.42.0",
        "glob": "^7.1.6",
        "mocha": "^8.3.2",
        "tslint": "^6.1.3",
        "typescript": "^4.2.3",
        "vsce": "^1.87.1",
        "vscode-test": "^1.5.2"
    }
}